{
  "manifest_version": 3,
  "name": "Chimme",
  "version": "1.0",
  "description": "A simple Pomodoro timer with minute chimes",
  "permissions": ["notifications"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon32.png",
    "128": "icons/icon192.png"
  }
}
